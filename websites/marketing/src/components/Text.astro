---
export interface Props {
  tag?: "span" | "p" | "h4";
  size?: "XXL" | "XL" | "L" | "M";
  theme?: "light" | "dark";
  className?: string;
}

const sizeStyle = {
  M: "text-xs md:text-base",
  L: "text-base md:text-xl",
  XL: "text-xl md:text-2xl",
  XXL: "text-2xl md:text-3xl",
};

const themeColor = {
  light: "text-gray-600",
  dark: "text-gray-200",
};

const { size, theme, className, tag } = Astro.props;

const Root = tag || "p";

const sharedStyles = "!leading-normal font-light";
const styles = `${sharedStyles} ${sizeStyle[size || "M"]}  ${
  themeColor[theme || "light"]
} ${className || ""}`;
---

<Root class={styles}><slot /></Root>
