---
import LinkButton from "./LinkButton.astro";
import { Logo } from "./Logo";
---

<nav
  class="flex justify-between items-center px-6 overflow-x-scroll md:overflow-auto py-1"
>
  <ul class="flex flex-row items-center gap-2">
    <li>
      <LinkButton variant="tertiary" href="/">
        <span class="sr-only">Home</span>
        <Logo />
      </LinkButton>
    </li>

    <li class="hidden md:block">
      <LinkButton
        variant="tertiary"
        href="https://docs.progressively.app/"
        id="documentation"
      >
        Documentation
      </LinkButton>
    </li>
    <!-- {
    <li>
      <LinkButton variant="tertiary-inverse" href="/blog">Blog</LinkButton>
    </li> -->

    <li class="hidden md:block">
      <LinkButton variant="tertiary" href="/#pricing">Pricing</LinkButton>
    </li>
  </ul>

  <LinkButton
    variant="tertiary"
    href="https://dashboard.progressively.app/"
    id="documentation"
  >
    Sign in
  </LinkButton>
</nav>
