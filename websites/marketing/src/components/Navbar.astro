---
import Button from "./Button.astro";

const navLinkStyles =
  "px-2 md:px-6 py-2 text-xs md:text-base text-gray-700 hover:text-gray-600 active:text-gray-500 rounded-xl block transition-all hover:bg-gray-50 active:bg-gray-100";
---

<nav class="sticky top-0 bg-white z-30 py-4 border-b border-gray-100">
  <div
    class="px-4 max-w-screen-xl w-full mx-auto flex flex-row justify-between items-center"
  >
    <ul class="flex flex-row gap-4 items-center shrink-0">
      <li class="flex flex-row gap-2 items-center shrink-0">
        <img
          src="/favicon.svg"
          alt="Progressively"
          class="w-10 h-10 block rounded-full p-1 bg-gray-900"
        />
        <div class="font-bold text-xl hidden md:block text-gray-800">
          Progressively
        </div>
      </li>
    </ul>

    <ul class="flex flex-row justify-end gap-4 items-center shrink-0">
      <li class="shrink-0">
        <a
          href="https://docs.progressively.app/"
          id="nav-docs"
          class={`hidden md:block ${navLinkStyles}`}>Documentation</a
        >
      </li>

      <li class="shrink-0">
        <a
          class={navLinkStyles}
          href="https://github.com/progressively-crew/progressively"
        >
          Github
        </a>
      </li>

      <li class="shrink-0">
        <a class={navLinkStyles} href="https://app.cal.com/mfrachet/30min">
          Contact us
        </a>
      </li>

      <li class="shrink-0">
        <Button
          href="https://dashboard.progressively.app/"
          id="go-to-app"
          size="M"
        >
          Go to app
        </Button>
      </li>
    </ul>
  </div>
</nav>
