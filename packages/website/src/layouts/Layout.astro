---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import { getFlags } from "../helpers/featureFlags";

const flags = await getFlags();

export interface Props {
  title: string;
}

const { title } = Astro.props;
const description =
  "Progressively is a new feature flag solution that has a very low performance impact. It's a simple, accessible, lightweight and OpenSource feature flag software.";
---

<!DOCTYPE html>
<html lang="en" class="min-h-full h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/favicon.png" />
    <link
      href="https://rsms.me/inter/inter.css"
      rel="stylesheet"
      rel="preload"
    />

    <link href="/styles.css" rel="stylesheet" rel="preload" />

    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@mfrachet" />
    <meta name="twitter:image" content="/pg.jpg" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/pg.jpg" />

    <title>{title}</title>
  </head>
  <body class="min-h-full h-full bg-gray-50">
    <Nav showPricing={Boolean(flags.pricingPage)} />
    <slot />

    {flags.pricingPage && <Footer />}
  </body>
</html>
