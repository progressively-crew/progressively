---
import LinkButton from "./LinkButton.astro";
import Logo from "./Logo.astro";
---

<nav
  class="flex justify-between h-14 items-center bg-slate-800 px-8 overflow-x-scroll md:overflow-auto"
>
  <ul class="flex h-12 items-center gap-2">
    <li>
      <LinkButton variant="tertiary-inverse" href="/">
        <span class="sr-only">Home</span>
        <Logo />
      </LinkButton>
    </li>

    <li>
      <LinkButton
        variant="tertiary-inverse"
        href="https://docs.progressively.app/"
        id="documentation"
      >
        Documentation
      </LinkButton>
    </li>

    <li>
      <LinkButton variant="tertiary-inverse" href="/blog">Blog</LinkButton>
    </li>

    <li>
      <LinkButton variant="tertiary-inverse" href="pricing" id="pricing">
        Pricing
      </LinkButton>
    </li>
  </ul>

  <LinkButton
    variant="tertiary-inverse"
    href="https://dashboard.progressively.app/"
    id="documentation"
  >
    Sign in
  </LinkButton>
</nav>
