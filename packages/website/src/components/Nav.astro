---
import LinkButton from "./LinkButton.astro";
import Logo from "./Logo.astro";

export interface Props {
  showPricing?: boolean;
}

const { showPricing } = Astro.props;
---

<nav
  class="flex justify-between h-14 items-center bg-white dark:bg-slate-800 border-b border-gray-200 px-8 overflow-x-scroll"
>
  <ul class="flex h-12 items-center gap-2">
    <li>
      <LinkButton variant="tertiary" href="/">
        <span class="sr-only">Home</span>
        <Logo />
      </LinkButton>
    </li>

    <li>
      <LinkButton variant="tertiary" href="/features">Features</LinkButton>
    </li>

    {
      showPricing && (
        <li>
          <LinkButton variant="tertiary" href="pricing" id="pricing">
            Pricing
          </LinkButton>
        </li>
      )
    }

    <li>
      <LinkButton variant="tertiary" href="/why-it-s-different">
        Why it's different
      </LinkButton>
    </li>

    <li>
      <LinkButton variant="tertiary" href="/blog">Blog</LinkButton>
    </li>

    <li>
      <LinkButton
        variant="tertiary"
        href="https://docs.progressively.app/"
        id="documentation"
      >
        Documentation
      </LinkButton>
    </li>
  </ul>

  {
    showPricing && (
      <LinkButton
        variant="secondary"
        href="https://dashboard.progressively.app/"
        id="documentation"
      >
        Sign in
      </LinkButton>
    )
  }
</nav>
