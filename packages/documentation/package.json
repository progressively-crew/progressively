{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run --browser chrome"
  },
  "dependencies": {
    "@progressively/react": "^0.0.1-alpha.17",
    "@progressively/server-side": "^0.0.1-alpha-15",
    "@remix-run/node": "^1.8.0",
    "@remix-run/react": "^1.8.0",
    "@remix-run/serve": "^1.8.0",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "rehype-highlight": "^6.0.0",
    "remark-emoji": "^3.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.8.0",
    "@remix-run/eslint-config": "^1.8.0",
    "@tailwindcss/typography": "^0.5.8",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cypress": "^10.11.0",
    "cypress-axe": "^1.0.0",
    "eslint": "^8.28.0",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=14"
  }
}
