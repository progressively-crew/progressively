---
export interface Props {
  as?: "h1" | "h2";
  size?: "XL" | "L" | "M";
  theme?: "light" | "dark";
}

const { size, as: el, theme } = Astro.props;

const sizeStyles = {
  XL: "text-6xl",
  L: "text-5xl",
  M: "text-3xl",
  S: "text-xl",
};

const themeColor = {
  light: "text-slate-900",
  dark: "text-slate-50",
};

const sharedStyle = "font-extrabold font-title";
const styles = `${sharedStyle} ${themeColor[theme || "light"]} ${
  sizeStyles[size || "XL"]
}`;

const El = el || "p";
---

<El class={styles}><slot /></El>
