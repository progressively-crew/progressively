---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Feature from "../components/Feature.astro";
import PricingCard from "../components/PricingCard.astro";
---

<Layout title="Features of Progressively">
  <header>
    <Nav />

    <div class="container px-4 lg:px-64 mx-auto pt-20 pb-8">
      <h1 class="text-5xl font-extrabold">Pricing</h1>
    </div>
  </header>

  <main>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 justify-center px-2 max-w-7xl mx-auto gap-2 pb-16"
    >
      <PricingCard
        name="Open Source"
        description="Self-hosted"
        price="Free"
        priceUnit="You manage everything"
        features={[
          "Self Hosted",
          "Unlimited seats",
          "Unlimited flag evaluations",
          "Unlimited projects",
          "Unlimited environments",
        ]}
      />
      <PricingCard
        name="Free trial"
        description="Try the tool, get an idea"
        price="$0"
        priceUnit="Ends after 14 days"
        features={[
          "No credit card required",
          "For 14 days",
          "1 project",
          "2 environments",
          "300 flag evaluations",
        ]}
      />
      <PricingCard
        name="Standard"
        description="For small sized teams"
        price="$12"
        priceUnit="per seat per month"
        features={[
          "1 project",
          "1000 flag evaluations",
          "Unlimited environments",
        ]}
      />
      <PricingCard
        name="Pro"
        description="For medium sized teams"
        price="$25"
        priceUnit="per seat per month"
        features={[
          "10000 flag evaluations",
          "Unlimited project",
          "Unlimited environments",
        ]}
      />
    </div>
  </main>
</Layout>
