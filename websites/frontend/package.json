{
  "private": true,
  "name": "@progressively/frontend",
  "description": "",
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint app --fix",
    "start": "remix-serve build",
    "test:e2e": "cypress open",
    "test:e2e:dark": "CYPRESS_DARK_THEME=true cypress open",
    "test:e2e:ci": "cypress run --browser chrome",
    "test:e2e:ci:dark": "CYPRESS_DARK_THEME=true cypress run --browser chrome",
    "test:e2e:ci:parallel": "cypress run --browser chrome --record --parallel"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@okta/okta-auth-js": "^7.3.0",
    "@progressively/react": "workspace:*",
    "@progressively/server-side": "workspace:*",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/serve": "^1.19.3",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "recharts": "^2.5.0",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@progressively/database": "workspace:^1.0.0",
    "@remix-run/dev": "^1.19.3",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/qs": "^6.9.10",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.7.2",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.2.0",
    "cypress": "^13.5.1",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
