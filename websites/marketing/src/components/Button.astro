---
export interface Props {
  variant?: "primary" | "secondary" | "tertiary";
  size?: "L" | "M" | "S";
  href?: string;
  id?: string;
  target?: "_blank";
}

const { variant, size, href, id, target } = Astro.props;

const sizeStyles = {
  L: "py-3 px-9 text-xl border-2",
  S: "py-1 px-4 text-sm border",
  M: "py-2 px-6 text-base border",
};

const variantStyles = {
  primary:
    "bg-slate-900 hover:bg-slate-800 active:bg-slate-700 text-white border-transparent",
  secondary:
    "border-slate-900 text-slate-900 hover:border-slate-800 hover:text-slate-800 active:border-slate-700 active:text-slate-700 hover:opacity-70 active:opacity-50",
  tertiary:
    "text-slate-900 hover:text-slate-800 active:text-slate-700 border-transparent hover:bg-slate-50 active:bg-slate-100",
};

const sharedStyles = "rounded-full ";
const styles = `${sharedStyles} ${variantStyles[variant || "primary"]} ${
  sizeStyles[size || "L"]
}`;

const El = href ? "a" : "button";
---

<El class={styles} href={href} id={id} target={target}><slot /></El>
