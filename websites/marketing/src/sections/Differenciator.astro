---
import Title from "../components/Title.astro";
import Text from "../components/Text.astro";
import { TbBrandNextjs, TbSdk } from "react-icons/tb";
import { FaGithub, FaServer } from "react-icons/fa";
import { MdOutlinePrivacyTip } from "react-icons/md";
import { PiShareNetwork } from "react-icons/pi";
import { Card } from "../components/Card/Card";
import CardContent from "../components/Card/CardContent.astro";
import CardAsset from "../components/Card/CardAsset.astro";

const differentators = [
  {
    Icon: FaGithub,
    title: "Open Source",
    content: "We're all about community spirit",
  },
  {
    Icon: FaServer,
    title: "Self-hosted",
    content: "Your machines, your data.",
  },
  {
    Icon: MdOutlinePrivacyTip,
    title: "Privacy matters",
    content: "Everything is made anonymously.",
  },
  {
    Icon: TbBrandNextjs,
    title: "Server Side Rendering",
    content: "Compatible with  Next.js, Remix, etc...",
  },
  {
    Icon: TbSdk,
    title: "Small libraries",
    content: "The React SDK for feature flags is 1.3kB.",
  },
  {
    Icon: PiShareNetwork,
    title: "Realtime updates",
    content: "Websockets powered (opt-in)",
  },
];

const bigContainerClass = "max-w-screen-2xl w-full mx-auto px-4 md:px-12";
---

<section class="bg-sky-50 relative overflow-hidden px-4">
  <div class={`${bigContainerClass} py-24`}>
    <div class="flex flex-col gap-4">
      <Title tag="h2" size="XL">Why betting on Progressively?</Title>
      <div class="max-w-4xl">
        <Text size="XL">
          Progressively might be compact, but it packs a punch! What really sets
          it apart is its philosophy and core values. We're big believers in
          these principles, and they're at the heart of everything we do.
        </Text>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 pt-12 gap-4">
      {
        differentators.map((diff) => (
          <div class="rounded-3xl border border-gray-100 bg-white">
            <CardContent>
              <div class="pt-2">
                <Title tag="h3" size="M">
                  {diff.title}
                </Title>
                <Text tag="p" size="M">
                  {diff.content}
                </Text>
              </div>
            </CardContent>
          </div>
        ))
      }
    </div>
  </div>
</section>
