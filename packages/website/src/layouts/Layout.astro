---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const description =
  "Progressively is a new feature flag solution that has a very low performance impact. It's a simple, lightweight and OpenSource feature flag software.";
---

<!DOCTYPE html>
<html lang="en" class="min-h-full h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/favicon.png" />
    <link
      href="https://rsms.me/inter/inter.css"
      rel="stylesheet"
      rel="preload"
    />

    <link href="/github-dark.css" rel="stylesheet" rel="preload" />
    <link href="/styles.css" rel="stylesheet" rel="preload" />

    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@mfrachet" />
    <meta name="twitter:image" content="/pg.png" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/pg.png" />

    <title>{title}</title>

    <script
      defer
      data-domain="progressively.app"
      src="https://vps-4b57c244.vps.ovh.net/js/plausible.js"
    ></script>
  </head>
  <body>
    <div class="sr-only" aria-live="polite" id="notify-polite"></div>
    <Nav />

    <slot />

    <Footer />

    <style is:global>
      body {
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    </style>
  </body>
</html>
