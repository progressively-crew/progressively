{
  "private": true,
  "name": "@progressively/frontend",
  "description": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint app --fix",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "test": "jest --passWithNoTests --maxWorkers 1",
    "test:e2e": "cypress open",
    "test:e2e:dark": "CYPRESS_DARK_THEME=true cypress open",
    "test:e2e:ci": "cypress run --browser chrome",
    "test:e2e:ci:dark": "CYPRESS_DARK_THEME=true cypress run --browser chrome",
    "test:e2e:ci:parallel": "cypress run --browser chrome --record --parallel"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.8",
    "@okta/okta-auth-js": "^7.2.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@remix-run/vercel": "^1.12.0",
    "@sentry/remix": "^7.34.0",
    "camelcase": "6.3.0",
    "nock": "^13.3.0",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "recharts": "^2.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@remix-run/dev": "^1.12.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "@types/react-copy-to-clipboard": "^5.0.4",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "autoprefixer": "^10.4.13",
    "axe-core": "^4.6.3",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "cypress": "^12.5.0",
    "cypress-axe": "^1.3.0",
    "eslint": "^8.33.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
