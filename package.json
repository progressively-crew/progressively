{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^5.4.0",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "build": "turbo build",
    "db:prepare": "turbo run db:migrate:dev --filter=@progressively/backend && turbo run db:generate:schema --filter=@progressively/backend",
    "db:seed": "turbo run db:seed --filter=@progressively/backend",
    "db:cleanup": "turbo run db:seed --filter=@progressively/backend",
    "setup": "pnpm install",
    "start": "turbo run start --filter=@progressively/frontend --filter=@progressively/backend",
    "dev": "turbo run dev --filter=@progressively/frontend --filter=@progressively/backend",
    "deploy:lib": "lerna publish",
    "deploy:images": "./scripts/docker-build-deploy.sh"
  },
  "dependencies": {
    "turbo": "^1.7.4"
  }
}
