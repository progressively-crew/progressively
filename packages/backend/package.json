{
  "name": "@progressively/backend",
  "version": "0.0.1-alpha.4",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "db:migrate:dev": "prisma migrate dev --name init",
    "db:generate:schema": "prisma generate",
    "db:seed": "ts-node ./test/helpers/seed-run.ts",
    "db:cleanup": "ts-node ./test/helpers/cleanup-run.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "gen:bearer": "node ./cli/generate-bearer-token.js",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env TZ=UTC jest",
    "test:watch": "cross-env TZ=UTC jest --watch",
    "test:cov": "cross-env TZ=UTC jest --coverage",
    "test:debug": "cross-env TZ=UTC node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env TZ=UTC jest --runInBand --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.6",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.4.6",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.6",
    "@nestjs/platform-ws": "^8.4.6",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/websockets": "^8.4.6",
    "@prisma/client": "^3.15.0",
    "@types/ws": "^8.5.3",
    "bcrypt": "^5.0.1",
    "camelcase": "^6.3.0",
    "cookie-parser": "^1.4.6",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "murmurhash3js": "^3.0.1",
    "nanoid": "^3.3.4",
    "nest-winston": "^1.6.2",
    "nodemailer": "^6.7.5",
    "passport": "^0.5.3",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "prompts": "^2.4.2",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "winston": "^3.7.2",
    "ws": "^8.7.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.6",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/testing": "^8.4.6",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/joi": "^17.2.3",
    "@types/node": "^17.0.41",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "prisma": "^3.15.0",
    "supertest": "^6.2.3",
    "swagger-ui-express": "^4.4.0",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
