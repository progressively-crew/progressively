{
  "private": true,
  "name": "@progressively/frontend",
  "description": "",
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint app --fix",
    "start": "remix-serve build",
    "test:e2e": "cypress open",
    "test:e2e:dark": "CYPRESS_DARK_THEME=true cypress open",
    "test:e2e:ci": "cypress run --browser chrome",
    "test:e2e:ci:dark": "CYPRESS_DARK_THEME=true cypress run --browser chrome",
    "test:e2e:ci:parallel": "cypress run --browser chrome --record --parallel"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@okta/okta-auth-js": "^7.2.0",
    "@progressively/react": "workspace:*",
    "@progressively/server-side": "workspace:*",
    "@progressively/shared": "workspace:*",
    "@radix-ui/react-label": "^2.0.1",
    "@radix-ui/react-select": "^1.2.1",
    "@radix-ui/react-switch": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.5",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "camelcase": "6.3.0",
    "nock": "^13.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "recharts": "^2.5.0",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@progressively/database": "workspace:^1.0.0",
    "@remix-run/dev": "^1.15.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.7.0",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "cypress": "^12.11.0",
    "cypress-axe": "^1.4.0",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.5",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
