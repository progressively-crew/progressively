{
  "private": true,
  "name": "@progressively/frontend",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint app --fix",
    "start": "remix-serve build",
    "test:e2e": "cypress open",
    "test:e2e:dark": "CYPRESS_DARK_THEME=true cypress open",
    "test:e2e:ci": "cypress run --browser chrome",
    "test:e2e:ci:dark": "CYPRESS_DARK_THEME=true cypress run --browser chrome",
    "test:e2e:ci:parallel": "cypress run --browser chrome --record --parallel"
  },
  "dependencies": {
    "@feedback-fish/react": "^1.2.2",
    "@headlessui/react": "^1.7.17",
    "@okta/okta-auth-js": "^7.4.3",
    "@progressively/react": "workspace:*",
    "@progressively/server-side": "workspace:*",
    "@progressively/shared": "workspace:*",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@remix-run/node": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "@remix-run/serve": "^2.2.0",
    "isbot": "latest",
    "nock": "^13.3.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "recharts": "^2.9.3",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@progressively/database": "workspace:^1.0.0",
    "@remix-run/dev": "^2.2.0",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/react": "^14.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.8.2",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "cypress": "^13.5.1",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
