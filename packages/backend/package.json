{
  "name": "@progressively/backend",
  "version": "0.0.1-beta.1",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "gen:bearer": "node ./cli/generate-bearer-token.js",
    "start:raw": "nest start",
    "start": "node dist/main",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env TZ=UTC jest",
    "test:watch": "cross-env TZ=UTC jest --watch",
    "test:cov": "cross-env TZ=UTC jest --coverage",
    "test:debug": "cross-env TZ=UTC node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env TZ=UTC jest --runInBand --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@progressively/database": "^1.0.0",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-ws": "^9.2.1",
    "@nestjs/throttler": "^3.1.0",
    "@nestjs/websockets": "^9.2.1",
    "@okta/jwt-verifier": "^2.6.0",
    "@types/ws": "^8.5.4",
    "bcrypt": "^5.1.0",
    "camelcase": "6.3.0",
    "cookie-parser": "^1.4.6",
    "got": "^11.8.5",
    "helmet": "^6.0.1",
    "ioredis": "^5.2.5",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "murmurhash3js": "^3.0.1",
    "nanoid": "3.3.4",
    "nest-winston": "^1.8.0",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.8",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/testing": "^9.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.11.18",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.17.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
