{
  "private": true,
  "name": "@progressively/frontend",
  "description": "",
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "lint": "eslint app --fix",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "test": "jest --passWithNoTests --maxWorkers 1",
    "test:e2e": "cypress open",
    "test:e2e:dark": "CYPRESS_DARK_THEME=true cypress open",
    "test:e2e:ci": "cypress run --browser chrome",
    "test:e2e:ci:dark": "CYPRESS_DARK_THEME=true cypress run --browser chrome",
    "test:e2e:ci:parallel": "cypress run --browser chrome --record --parallel"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@okta/okta-auth-js": "^7.2.0",
    "@radix-ui/react-label": "^2.0.1",
    "@radix-ui/react-select": "^1.2.1",
    "@radix-ui/react-switch": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.5",
    "@remix-run/node": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "@remix-run/serve": "^1.14.3",
    "@remix-run/vercel": "^1.14.3",
    "@sentry/remix": "^7.43.0",
    "camelcase": "6.3.0",
    "nock": "^13.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "recharts": "^2.5.0",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@progressively/database": "workspace:^1.0.0",
    "@remix-run/dev": "^1.14.3",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.6.3",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "cypress": "^12.8.1",
    "cypress-axe": "^1.4.0",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "tailwindcss-animate": "^1.0.5",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
