---
export interface Props {
  tag?: "h1" | "h2" | "h3" | "h4" | "p";
  size?: "XL" | "L" | "M" | "S";
  theme?: "light" | "dark";
  className?: string;
}

const sizeStyles = {
  XL: "text-4xl md:text-6xl",
  L: "text-3xl md:text-5xl",
  M: "text-xl md:text-3xl",
  S: "text-base md:text-xl",
};

const themeColor = {
  light: "text-slate-900",
  dark: "text-slate-50",
};

const { size, tag: el, theme, className } = Astro.props;

const sharedStyle = "font-bold font-title";
const styles = `${sharedStyle} ${themeColor[theme || "light"]} ${
  sizeStyles[size || "XL"]
} ${className || ""}`;

const El = el || "p";
---

<El class={styles}><slot /></El>
