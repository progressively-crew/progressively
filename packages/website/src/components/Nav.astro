---
import LinkButton from "./LinkButton.astro";
import Container from "./Container.astro";

export interface Props {
  showPricing?: boolean;
}

const { showPricing } = Astro.props;
---

<Container>
  <nav class="flex flex-wrap md:justify-end container py-2 gap-2">
    <LinkButton variant="tertiary" href="/">Home</LinkButton>

    <LinkButton variant="tertiary" href="/features">Features</LinkButton>

    {
      showPricing && (
        <LinkButton variant="tertiary" href="pricing" id="pricing">
          Pricing
        </LinkButton>
      )
    }

    <LinkButton variant="tertiary" href="/why-it-s-different">
      Why it's different
    </LinkButton>

    <LinkButton variant="tertiary" href="/blog">Blog</LinkButton>

    <LinkButton
      variant="tertiary"
      href="https://docs.progressively.app/"
      id="documentation"
    >
      Documentation
    </LinkButton>

    <LinkButton
      variant="tertiary"
      href="https://github.com/progressively-crew/progressively"
      target={"_blank"}
      id="github"
    >
      Github
    </LinkButton>
  </nav>
</Container>
